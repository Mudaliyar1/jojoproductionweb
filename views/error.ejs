<%- include('partials/header') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title text-center">Error</h1>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">Oops! Something went wrong.</p>
                    <p class="card-text"><strong><%= message %></strong></p>
                    <p class="card-text"><small><%= error.status %></small></p>
                    <pre><%= error.stack %></pre>
                    <a href="/" class="btn btn-primary mt-3">Go to Homepage</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>