<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-lg-12">
            <h1 class="h3 mb-2 text-gray-800"><%= title %></h1>
            <p class="mb-4">Fill out the form below to add a new service or edit an existing one.</p>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><%= title %></h6>
        </div>
        <div class="card-body">
            <form action="/admin/services/<%= service ? 'edit/' + service._id : 'add' %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Service Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= service ? service.title : '' %>" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="5" required><%= service ? service.description : '' %></textarea>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Service Images</label>
                    <% if (service && service.images && service.images.length > 0) { %>
                        <div class="mb-2">
                            <% service.images.forEach(image => { %>
                                <img src="<%= image %>" alt="Service Image" class="img-thumbnail me-2 mb-2" style="max-width: 150px;">
                                <input type="hidden" name="existingImages[]" value="<%= image %>">
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p>No images uploaded yet.</p>
                    <% } %>
                    <input type="file" class="form-control" id="images" name="images" accept="image/*" multiple>
                    <small class="form-text text-muted">Upload multiple images for the service.</small>
                </div>
                <div class="mb-3">
                    <label for="videos" class="form-label">Service Videos</label>
                    <% if (service && service.videos && service.videos.length > 0) { %>
                        <div class="mb-2">
                            <% service.videos.forEach(video => { %>
                                <video src="<%= video %>" controls class="img-thumbnail me-2 mb-2" style="max-width: 200px;"></video>
                                <input type="hidden" name="existingVideos[]" value="<%= video %>">
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p>No videos uploaded yet.</p>
                    <% } %>
                    <input type="file" class="form-control" id="videos" name="videos" accept="video/*" multiple>
                    <small class="form-text text-muted">Upload multiple video files for the service.</small>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="featured" name="featured" <%= service && service.featured ? 'checked' : '' %>>
                    <label class="form-check-label" for="featured">Featured Service</label>
                </div>
                <button type="submit" class="btn btn-primary">Save Service</button>
                <a href="/admin/services" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>