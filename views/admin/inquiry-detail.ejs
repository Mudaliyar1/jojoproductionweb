<%- include('layout', { body: `
<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="page-title">Inquiry Details</h1>
                <div>
                    <a href="/admin/inquiries" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Inquiries
                    </a>
                    <button class="btn btn-danger" onclick="deleteInquiry('${inquiry._id}')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Event Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Event Type:</strong>
                            <p class="text-muted">${inquiry.eventType}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Event Date:</strong>
                            <p class="text-muted">${new Date(inquiry.eventDate).toLocaleDateString()}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Event Location:</strong>
                            <p class="text-muted">${inquiry.eventLocation}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Number of Guests:</strong>
                            <p class="text-muted">${inquiry.numberOfGuests}</p>
                        </div>
                        <div class="col-12 mb-3">
                            <strong>Budget Range:</strong>
                            <p class="text-muted">${inquiry.budgetRange}</p>
                        </div>
                        <div class="col-12 mb-3">
                            <strong>How they heard about us:</strong>
                            <p class="text-muted">${inquiry.heardAbout}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Full Name:</strong>
                            <p class="text-muted">${inquiry.fullName}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email Address:</strong>
                            <p class="text-muted">${inquiry.email}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Phone Number:</strong>
                            <p class="text-muted">${inquiry.phoneNumber}</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Preferred Contact Method:</strong>
                            <p class="text-muted">${inquiry.preferredContact}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Event Vision</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">${inquiry.eventVision}</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Status & Actions</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Current Status:</strong>
                        <span class="badge bg-${inquiry.status === 'new' ? 'primary' : inquiry.status === 'viewed' ? 'info' : inquiry.status === 'responded' ? 'success' : 'secondary'}">
                            ${inquiry.status.charAt(0).toUpperCase() + inquiry.status.slice(1)}
                        </span>
                    </div>
                    <div class="mb-3">
                        <strong>Submitted:</strong>
                        <p class="text-muted">${new Date(inquiry.createdAt).toLocaleString()}</p>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" onclick="updateStatus('${inquiry._id}', 'responded')">
                            <i class="fas fa-reply"></i> Mark as Responded
                        </button>
                        <button class="btn btn-warning" onclick="updateStatus('${inquiry._id}', 'pending')">
                            <i class="fas fa-clock"></i> Mark as Pending
                        </button>
                        <button class="btn btn-info" onclick="updateStatus('${inquiry._id}', 'viewed')">
                            <i class="fas fa-eye"></i> Mark as Viewed
                        </button>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Contact</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Contact the client directly:</p>
                    <div class="d-grid gap-2">
                        <a href="mailto:${inquiry.email}" class="btn btn-outline-primary">
                            <i class="fas fa-envelope"></i> Send Email
                        </a>
                        <a href="tel:${inquiry.phoneNumber}" class="btn btn-outline-success">
                            <i class="fas fa-phone"></i> Call Client
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateStatus(id, status) {
    fetch('/admin/inquiries/status/' + id, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ status: status })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error updating status');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error updating status');
    });
}

function deleteInquiry(id) {
    if (confirm('Are you sure you want to delete this inquiry?')) {
        fetch('/admin/inquiries/delete/' + id, {
            method: 'POST',
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/admin/inquiries';
            } else {
                alert('Error deleting inquiry');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting inquiry');
        });
    }
}
</script>
` }) %>